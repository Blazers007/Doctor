<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--<item name="colorPrimaryDark">#ff71beca</item>-->
        <!--<item name="colorPrimary">#ff81d8e6</item>-->
        <!--<item name="colorAccent">#ffff5656</item>-->
        <item name="colorPrimaryDark">#039be5</item>
        <item name="colorPrimary">#03a9f4</item>
        <item name="colorAccent">#ff5722</item>
    </style>

    <!-- 登陆界面 -->
    <style name="LoginTheme" parent="AppTheme">
        <item name="colorPrimaryDark">#ff71beca</item>
        <item name="colorPrimary">#ff81d8e6</item>
    </style>

    <!-- 注册界面 -->
    <style name="RegisterTheme" parent="AppTheme">
        <item name="colorPrimaryDark">#039be5</item>
        <item name="colorPrimary">#03a9f4</item>
        <item name="colorAccent">#ff5722</item>
    </style>

    <!-- 主界面-->
    <style name="MainTheme" parent="AppTheme">
        <item name="colorPrimaryDark">#039be5</item>
        <item name="colorPrimary">#03a9f4</item>
        <item name="colorAccent">#ff5722</item>
    </style>

    <!-- 预约界面-->
    <style name="MakeAppointment" parent="AppTheme">
        <item name="colorPrimary">#2baf2b</item>
        <item name="colorPrimaryDark">#0a8f08</item>
    </style>

    <!-- 图片查看功能 全屏显示-->
    <style name="FullScreen" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>
