<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/imageView"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_stay_primary_portrait_grey600_36dp" android:paddingLeft="12dp"
            android:paddingRight="12dp" android:paddingTop="12dp" android:layout_below="@+id/textView"/>
    <ImageView android:layout_width="48dp" android:layout_height="48dp" android:id="@+id/imageView2"
               android:layout_alignTop="@+id/editText2"
               android:layout_marginLeft="8dp" android:src="@drawable/ic_vpn_key_grey600_36dp"
               android:paddingLeft="12dp" android:paddingRight="12dp" android:paddingTop="12dp"/>
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="下一步"
            android:id="@+id/btn_next2"
            android:layout_alignParentBottom="true" android:layout_marginBottom="28dp"/>
</RelativeLayout>