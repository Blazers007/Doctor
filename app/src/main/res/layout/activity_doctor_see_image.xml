<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        tools:context="com.blazers.app.doctor.Activity.Appointment.MakeAppointment">
    <include layout="@layout/toolbar"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="168dp"
        android:id="@+id/imageView11"
        android:src="@drawable/img_doctor_see_h"
        android:scaleType="centerCrop" />

    <!-- Shadow-->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/shadow_bottom"
        android:layout_marginBottom="4dp" />
    <!-- 点击上传-->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:id="@+id/imageView12"
                android:src="@drawable/ic_doctor_see_upload"
                android:layout_margin="8dp"
                android:padding="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="立即上传您的心电图"
                android:id="@+id/textView21"
                android:textSize="22sp"
                android:layout_toRightOf="@+id/imageView12"
                android:textColor="#ff78b0f5"
                android:layout_alignTop="@+id/imageView12"
                android:layout_marginTop="8dp"
                android:typeface="normal"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我们有专业的医生会第一时间反馈结果给您"
                android:id="@+id/textView22"
                android:layout_toRightOf="@+id/imageView12"
                android:layout_below="@+id/textView21"
                android:textColor="#666"
                android:layout_marginTop="8dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
